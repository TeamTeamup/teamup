<div class="panel">
  <h1>Welcome to TeamUp</h1>
  <p>Team building made easy</p>
</div>

<hr>

<div id="search_bar" class="row">
  <div class="small-12 columns">
        <div class="small-12 medium-3 large-3 columns">
          <%= link_to "View All Projects", projects_path, class: "button postfix expand" %>
        </div>
        <div class="small-12 medium-3 large-3 columns">
          <p style="text-align: center;">filter things go here</p>
        </div>
        <%= form_tag projects_path, id: 'search_form', method: :get do %>
        <div class="row collapse">
          <div class="small-8 medium-4 large-4 columns">
            <%= text_field_tag :search, params[:search], placeholder: "Find projects" %>
          </div>
        <div class="small-4 medium-2 large-2 columns">
          <%= submit_tag 'Search', class: "button postfix alert" %>
        </div>
        </div>
    <% end %>
  </div>
</div>

<div id="projects" class="row">
  <%= render @projects %>
</div>

<div class="row">
  <div class="medium-12 medium-centered columns" id="pagination">
    <%= paginate @projects, :remote => true %>
  </div>
</div>
