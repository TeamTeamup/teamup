<h1> All Projects </h1>

<div id="search_bar" class="row">
  <div class="medium-12 columns">
    <%= form_tag projects_path, id: 'search_form', method: :get do %>
      <div class="row collapse">
        <div class="medium-5 columns left">
          <%= text_field_tag :search, params[:search], placeholder: "Find projects" %>
        </div>
        <div class="medium-1 columns left">
          <%= submit_tag 'Search', class: "button postfix alert" %>
        </div>
        <div class="medium-2 columns right">
          <%= link_to "Add a Project", new_project_path, class: "button postfix expand" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

